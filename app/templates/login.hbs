<form {{action 'authenticate' on='submit'}}>
  <div class="form-group">
    <label for="identification">E-Mail Adresi</label>
    {{input id='identification' placeholder='E-Mail Adresi' value=identification}}
  </div>

  <div class="form-group">
    <label for="password">Şifre</label>
    {{input id='password' placeholder='Şifre' type='password' value=password}}
  </div>

  <button type="submit" class="btn btn-default">Giriş</button>
</form>

{{#if errorMessage}}
  <p>{{errorMessage}}</p>
{{/if}}
